<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#fff"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#231F20"
        >





    <ImageView
        android:id="@+id/del_more"
        android:layout_width="307dp"
        android:layout_height="264dp"
        android:visibility="invisible"
        android:transitionName="citychange_del"

        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/delhi_illus" />


    <ImageView
        android:id="@+id/gen_more"
        android:layout_width="494dp"
        android:transitionName="citychange_del"

        android:layout_height="305dp"
        android:layout_marginBottom="4dp"

        android:adjustViewBounds="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/general_illus" />

    <ImageView
        android:id="@+id/lon_more"
        android:layout_width="518dp"
        android:transitionName="citychange_del"

        android:layout_height="294dp"
        android:adjustViewBounds="true"

        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/london_illus" />

    <ImageView
        android:id="@+id/mum_more"
        android:transitionName="citychange_del"

        android:layout_width="346dp"
        android:layout_height="268dp"
        android:adjustViewBounds="true"

        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/mumbai_illus" />

    <ImageView
        android:id="@+id/ggn_more"
        android:layout_width="452dp"
        android:layout_height="299dp"
        android:transitionName="citychange_del"

        android:adjustViewBounds="true"

        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gurgaon_illus" />

    <RelativeLayout
        android:id="@+id/city_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/rect"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/black"
            android:letterSpacing="0.1"
            android:transitionName="cityname"
            android:textAllCaps="true"
            android:layout_toStartOf="@id/search_button"
            android:layout_alignParentStart="true"
            android:text="UNITED KINGDOM IS A BAD MAN"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#FAFAFA"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="6dp"
            android:padding="10dp"

            app:srcCompat="@drawable/srchicon" />


    </RelativeLayout>




    <ImageView
        android:id="@+id/cloud_left"
        android:layout_width="354dp"
        android:layout_height="122dp"
        android:transitionName="cloudleft"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cloud_left" />

    <ImageView
        android:id="@+id/cloud_right"
        android:layout_width="306dp"
        android:layout_height="148dp"
        android:layout_marginStart="188dp"
        android:transitionName="cloudright"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cloud_right" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="316dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cloudwhite_bg" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="457dp"

        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:transitionName="cloudwhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"

        app:srcCompat="@drawable/cloudwhite" />

    <com.example.contamino.HeightWrappingViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"

        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_search">


        <LinearLayout
            android:id="@+id/moreinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <RelativeLayout
                android:animateLayoutChanges="true"

                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:animateLayoutChanges="true"

                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:letterSpacing="0.5"
                        android:paddingBottom="10dp"
                        android:text="AIR QUALITY"
                        android:textColor="#FAFAFA"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/time_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lght"
                        android:letterSpacing="0.15"
                        android:paddingTop="0dp"
                        android:text="4 HOURS AGO"
                        android:textColor="#FAFAFA"
                        android:textSize="16sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/aqi_text"
                    android:layout_width="wrap_content"
                    android:transitionName="aqi"

                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"

                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/black"
                    android:text="420"
                    android:textColor="#F5AF76"
                    android:textSize="50sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/air_type_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"

                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/rect_hazard"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/air_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/black"
                    android:letterSpacing="0.65"
                    android:padding="5dp"
                    android:text="HAZARDOUS"
                    android:textColor="#fff"
                    android:textSize="13dp" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"

                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"


                    android:paddingRight="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:letterSpacing="0.1"

                        android:paddingBottom="10dp"
                        android:text="PM 2.5 AQI"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:letterSpacing="0.1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="NO2 AQI"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:letterSpacing="0.1"
                        android:paddingTop="10dp"
                        android:text="CO AQI"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"

                    android:paddingLeft="10dp"


                    android:paddingRight="10dp">


                    <TextView
                        android:id="@+id/pm25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:letterSpacing="0.1"

                        android:paddingBottom="10dp"
                        android:text="523"
                        android:textColor="#F5AF76"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/no2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:letterSpacing="0.1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="20"
                        android:textColor="#F5AF76"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/co"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:letterSpacing="0.1"
                        android:paddingTop="10dp"
                        android:text="23"
                        android:textColor="#F5AF76"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:animateLayoutChanges="true"

                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:letterSpacing="0.1"

                        android:paddingBottom="10dp"
                        android:text="PM 10 AQI"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:letterSpacing="0.1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="SO2 AQI"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:letterSpacing="0.1"
                        android:paddingTop="10dp"
                        android:text="03 AQI"
                        android:textColor="#fff"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"


                    android:animateLayoutChanges="true"

                    android:paddingLeft="10dp">


                    <TextView
                        android:id="@+id/pm10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:letterSpacing="0.1"

                        android:paddingBottom="10dp"
                        android:text="523"
                        android:textColor="#F5AF76"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/so2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:letterSpacing="0.1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="20"
                        android:textColor="#F5AF76"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/o3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:letterSpacing="0.1"
                        android:paddingTop="10dp"
                        android:text="25"
                        android:textColor="#F5AF76"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/maskinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"


            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/shopbt"
                android:layout_width="368dp"
                android:layout_height="123dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/car_box" />

            <ImageView
                android:id="@+id/cabbt"
                android:layout_width="368dp"
                android:layout_height="123dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/mask_box" />
        </LinearLayout>


    </com.example.contamino.HeightWrappingViewPager>

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/worm_dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:dotsColor="#fff"
        app:dotsCornerRadius="5.25dp"
        app:dotsSize="10.5dp"
        app:dotsSpacing="5dp"
        app:dotsStrokeColor="#fff"
        app:dotsStrokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewpager" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
